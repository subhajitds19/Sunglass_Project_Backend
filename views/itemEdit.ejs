<%-include('common/head')%>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <!-- Sidebar -->
            <%-include('common/sidebar')%>
                <!-- End of Sidebar -->

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <!-- Topbar -->
                        <%-include('common/topbar')%>
                            <!-- End of Topbar -->

                            <!-- Begin Page Content -->
                            <div class="container-fluid">



                                <!-- Content Row -->
                                <div class="container-fluid">

                                    <!-- Page Heading -->


                                    <!-- DataTales Example -->


                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 style="text-align: center;"> EDIT ITEM  </h6>
                                            <div class="modal-body">
                                                <form action="/admin/itemUpdate" method="post"
                                                    enctype="multipart/form-data">
                                                    <input type="hidden" name="itemId" value="<%=itemEditData._id%>">

                                                    <div class="form-group">
                                                        <label class="col-form-label">ItemName:</label>
                                                        <input type="text" class="form-control" name="itemName"
                                                            value="<%=itemEditData.itemName%>" placeholder="Item Name">
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-form-label">ItemDetails:</label>
                                                        <input type="text" class="form-control" name="itemDetails"
                                                            value="<%=itemEditData.itemDetails%>"
                                                            placeholder="Item Details">
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-form-label">Price:</label>
                                                        <input type="text" class="form-control" name="price" value="<%=itemEditData.price%>"
                                                            placeholder="Item Price">
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-form-label">Image:</label>
                                                        <input type="file" class="form-control" name="image" value="<%=itemEditData.image%>" > <br>
                                                        <img src="../../upload/<%=itemEditData.image%>" alt="image" height="100px" width="200px">
                                                    </div>

                                                    <div class="modal-footer form-group">
                                                        <label class="col-form-label"></label>
                                                        <!-- <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Close</button> -->
                                                        <input type="submit" class="btn btn-primary" value="Update">
                                                    </div>
                                                </form>
                                            </div>


                                        </div>

                                    </div>

                                </div>

                                <!-- Content Row -->



                                <!-- Content Row -->


                            </div>
                            <!-- /.container-fluid -->

                    </div>
                    <!-- End of Main Content -->

                    <!-- Footer -->
                    <%-include('common/footer')%>
                        <!-- End of Footer -->


    </body>

    </html>